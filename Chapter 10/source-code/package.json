{
  "name": "chapter-10",
  "version": "1.0.0",
  "main": "server.js",
  "description": "Create an app for the cloud with Docker",
  "scripts": {
    "build": "npm-run-all build-*",
    "build-css": "node-sass public/css/main.scss > public/css/main.css",
    "postinstall": "npm run build",
    "start": "node server.js",
